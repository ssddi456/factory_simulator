doctype
html
  head
    meta(charset="utf-8")
    link(rel="stylesheet", type="text/css", href="http://cdn.staticfile.org/twitter-bootstrap/3.0.0/css/bootstrap.css")
    link(rel="stylesheet", type="text/css", href="resources/app.css")
    title factory simulater
  body
    .navbar-inverse.navbar-fixed-top
      .container
        .navbar-brand
          | factory simulater
    .body
      .container
        .row(ko-control="factory_a")
          include ./components/factory.jade
      .container(ko-control="battle_field")
        .row
          .col-md-12(data-bind="text: 'round : ' + round()")
        .row(data-bind="foreach: grids")
          .battle_grid(data-bind="if:!empty(), css:{ solider : !empty() }")
            div(data-bind="withfirst: units")
              div(data-bind="css : alliance().flag ")
                | name : 
                span(data-bind="text: name")
                br
                | hp :
                span(data-bind="text: hp")

    script(type="text/javascript", charset="utf-8", src="http://cdn.staticfile.org/require.js/2.1.11/require.js")
    script(type="text/javascript", charset="utf-8", src="imps/app.js")
    script(type="text/javascript", charset="utf-8", src="http://localhost:35729/livereload.js")
